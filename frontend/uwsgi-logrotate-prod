/tmp/flask.log {
    daily
    missingok
    notifempty
    compress
    delaycompress
    create 0777 www-data www-data
    copytruncate
    dateext
    dateformat -%Y-%m-%d
    postrotate
        mv /tmp/flask.log-$(date +%Y-%m-%d -d "yesterday") /mnt/nfs/prod;
        find /mnt/nfs/prod/flask.log-* -mtime +30 -exec rm {} \;
    endscript
}